
    /**
     * @param \PDO $con
     *
     * @return bool
     */
    protected function saveRelations(\PDO $con)
    {
        {%- for relation in table.relations -%}
            {{- "\n        " -}}
            {% if relation.isMany -%}
        foreach ($this->{{ relation.phpName(false) }} as $object) {
            $object->save(); {#- should pass $con ? what happens if $con doesn't handle the same database #}

        }
            {%- else -%}
        $this->{{ relation.phpName(false) }}->save(); {#- same as above #}
            {%- endif %}
            {{- "\n" }}
        {%- endfor %}
    }