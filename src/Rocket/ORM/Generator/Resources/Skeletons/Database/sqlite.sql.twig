{% extends 'schema.sql.twig' %}

{% block driver 'SQLite' %}
{% block header '' %}
{% block foreign_keys '' %}
{% block engine '' %}
{% block footer '' %}

{%- block columns -%}
    {# Remove auto increment statement for columns, an "rowid" type (or a primary key integer)
       is automaticly auto incremented. More info : https://www.sqlite.org/autoinc.html #}
    {%- for column in table.columns -%}
        {% embed ['Column/' ~ column.typeAsString ~ '.sql.twig', 'Column/column.sql.twig'] %}
            {% block auto_increment '' %}
        {% endembed %}
        {{- loop.last ? '' : ',' }}
    {%- endfor %}
{%- endblock columns %}